<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Microposts feed</h3>
			<%= render 'shared/feed' %>
		</div>		
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Sample App of Alon Bartur</h1>
		
		<p>This is the home page for the first rail app that alon is building. 
			<a href="http://www.alonbt.com" target="_blank">Click here</a> to see my web page		
		</p>
		<%= link_to "Sign up now!", signup_path , class:"btn btn-large btn-primary" %>
	</div>

<% end %>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/'%>
