<% provide(:title, @user.name) %>
<h1><%= @user.name %>, <%= @user.email%></h1>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.microposts.any? %>
			<h3> Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
		<%= will_paginate @microposts %>		
		<% end %>
	</div>
</div>